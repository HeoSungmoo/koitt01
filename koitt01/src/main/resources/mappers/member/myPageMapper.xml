<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="myPage">
    <!-- 1:1문의 리스트 출력 -->
    <select id = "inquiryList" resultType = "com.koitt.jardin.dto.member.inquiry.InquiryDTO">
    	select * from table	
    </select>
    
    <!-- 1:1문의 내용 -->
    <select id = "inquiryView" resultType = "com.koitt.jardin.dto.member.inquiry.InquiryDTO">
    	select * from table where no = #{no}
    </select>
    
    <!-- 1:1문의 글등록 -->
    <insert id = "writeComplete">
    	insert into table
    </insert>
    
    <!-- 회원정보 수정 정보 출력-->
    <select id = "changeInfoView" resultType = "com.koitt.jardin.dto.member.MemberDTO">
    	select * from table where id = #{id}
    </select>
    
    <!-- 회원정보 수정 -->
    <update id = "changeInfo">
    	update table set 
    </update>
    
    <!-- 회원탈퇴 -->
    <delete id = "delete">
    	delete table
    </delete>
    
</mapper>