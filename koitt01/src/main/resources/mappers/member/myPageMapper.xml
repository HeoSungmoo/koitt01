<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="myPage">
    <!-- 1:1문의 리스트 출력 -->
    <select id = "inquiryList" resultType = "com.koitt.jardin.dto.member.inquiry.InquiryDTO">
    	select * from question order by no asc;
    </select>
    
    <!-- 1:1문의 내용 -->
    <select id = "inquiryView" resultType = "com.koitt.jardin.dto.member.inquiry.InquiryDTO">
    	select * from question where no = #{no}
    </select>
    
   <!-- 1:1문의 글등록 -->
    <insert id = "writeComplete">
    	insert into question(no,id,category,title,content) values(question_seq.nextval,#{id},#{category},#{title},#{content});
    </insert>
    
    <!-- 회원정보 수정 정보 출력-->
    <select id = "changeInfoView" resultType = "com.koitt.jardin.dto.member.MemberDTO">
    	select * from member where id = #{id}
    </select>
    
    <!-- 회원정보 수정 -->
    <update id = "changeInfo">
    	update member set  
    </update>
    
    <!-- 회원탈퇴 -->
    <delete id = "delete">
    	delete member
    </delete>
    
</mapper>