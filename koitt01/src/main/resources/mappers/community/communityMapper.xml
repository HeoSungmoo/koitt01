<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="community">
<!-- 체험단 글 리스트 -->
<!-- 	<select id="expr" resultType="com.koitt.jardin.dto.community.PreUserDTO"> -->
<!-- 		select * from preuser order by preuser_no desc -->
<!-- 	</select> -->
<!-- 	체험단 글 보기 리뷰 -->
	<select id="exprReview" resultType="com.koitt.jardin.dto.community.PreUserDTO">
		select * from preuser where preUserNo=#{preUserNo}
	</select>
	
<!-- 	체험단 글 보기 뷰-->
	<select id="exprView" resultType="com.koitt.jardin.dto.community.PreUserDTO">
		select * from preuser where preuser_no=#{preuser_no}
	</select>
<!-- 	체험단 신청 글 쓰기 -->
	<insert id="preUserReview" >
	insert into preuserReview 
	</insert>
	
	<insert id="preUserApply" >
	insert into preuser_apply 
	</insert>
	<!-- 사용후기 -->
	<select id="epilogue" resultType="com.koitt.jardin.dto.product.ReviewDTO">
	select * from review
	</select>
	
	<select id="epilogueView" resultType="com.koitt.jardin.dto.product.ReviewDTO">
	select * from review where review_no=#{review_no}
	</select>
	
	
	<!-- 인조이 커피 글 리스트-->
	 <select id="enjoyCoffee" resultType="com.koitt.jardin.dto.community.EnjoyCoffDTO">
   		select * from enjoy_coffee
   	 </select>
   	 <!-- 인조이 커피 글 보기 -->
   	  <select id="enjoyView" resultType="com.koitt.jardin.dto.community.EnjoyCoffDTO">
   		select * from enjoy_coffee where no=#{no}
   	 </select>
<!-- 체험단 페이징 -->
   	 <!-- 페이징 게시글 수 -->
	<select id="exprPageNation" resultType="com.koitt.jardin.dto.page.PageNationDTO">
		select count(*) listCnt from preuser
	</select>
	<!--  페이징 글 리스트 가져오기 -->
	<select id="exprPageNationList" resultType="com.koitt.jardin.dto.community.PreUserDTO">
		select * 
      from(
               select row_number() over(order by preuser_no desc) as rnum, 
                     preuser_no,title,content,thumbnail,personnel,apply_start_date,apply_end_date,review_start_date,
                     review_end_date,announcement_date,grade from preuser order by preuser_no desc
          )
      where rnum between #{curPage}*10-9 and #{curPage}*10
   </select>
 		
   	 
</mapper>