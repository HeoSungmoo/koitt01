<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">
	
	<select id="list" resultType="com.koitt.jardin.dto.product.ProductDTO">

	select * from product order by product_no desc
			
	</select>
	
	<select id="categoryList" resultType="com.koitt.jardin.dto.product.ProductDTO">
	
	select * from product where category1=#{category1} and category2=#{category2}
	
	</select>
	
	
	<select id="detail" resultType="com.koitt.jardin.dto.product.ProductDTO">
	
	select * from product where product_no=#{product_no}
	
	</select>
	
	<select id="SubCategoryDto" resultType="com.koitt.jardin.dto.product.SubCategoryDto">
	
	select * from sub_category where sub_category_code=#{sub_category_code}
	
	</select>
	
	<select id="subCategoryList" resultType	="com.koitt.jardin.dto.product.SubCategoryDto">
	
	select * from sub_category

	</select>
	
	<select id="productInfoDto" resultType="com.koitt.jardin.dto.product.ProductInfoDTO">
	
	select * from product_info where product_no=#{product_no}
	
	</select>
	
	
	
	<insert id='review'>
	
	insert into review(review_no,product_no,id,title,content,grade) values(review_seq.nextval,#{product_no},#{id},#{title},#{content},#{grade})
	
	</insert>
	
	<select id="review_view" resultType="com.koitt.jardin.dto.product.ReviewDTO">
	
	select * from review where product_no=#{product_no}
	
	</select>
	
	<delete id="review_delete">
	
	delete from review where review_no=#{review_no}
	
	
	</delete>
	
	<update id="review_modify">
	
	update review set title=#{title} , content=#{content} where review_no=#{review_no}
	
	</update>
	
	<select id="review_modify_view" resultType="com.koitt.jardin.dto.product.ReviewDTO">
	
	select * from review where review_no=#{review_no}
	
	</select>
	
	<select id="search" resultType="com.koitt.jardin.dto.product.ProductDTO">
	
	
	</select>
	
	<insert id="photo">
	
	insert into review(review_no,product_no,id,title,content,grade,thumbnail) values(review_seq.nextval,#{product_no},#{id},#{title},#{content},#{grade},#{thumbnail})
	
	</insert>
	

	<insert id="inquiry">
	

	insert into qna(qna_no,product_no,id,title,content) values(qna_seq.nextval,#{product_no},#{id},#{title},#{content})
	</insert>
	
	
	
</mapper>