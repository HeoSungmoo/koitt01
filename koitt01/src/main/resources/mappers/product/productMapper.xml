<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">
	
	<select id="list" resultType="com.koitt.jardin.dto.product.ProductDTO">

	select * from product
			
	</select>
	
	<select id="detail" resultType="com.koitt.jardin.dto.product.ProductDTO">
	
	select * from product where productNo=#{productNo}
	
	</select>
	
	
	<select id="categoryList" resultType="com.koitt.jardin.dto.product.CategoryDto">
	
	select * from category order by category_code asc
	
	</select>
	
	<select id="SubCategoryDto" resultType="com.koitt.jardin.dto.product.SubCategoryDto">
	
	select * from sub_category where category_code=20
	
	</select>
	
	<select id="productInfoDto" resultType="com.koitt.jardin.dto.product.ProductInfoDTO">
	

	
	</select>
	
	<insert id="inquiry">
	
	
	</insert>
	
	
	<insert id="photo">
	
	
	
	</insert>
	
	<insert id='review'>
	
	insert into review()
	
	</insert>
	
	<select id="search" resultType="com.koitt.jardin.dto.product.ProductDTO">
	
	
	</select>
	
	
	
	
</mapper>